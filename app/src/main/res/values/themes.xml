<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Flashcards" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@null</item>
        <item name="colorPrimaryDark">@null</item>
        <item name="colorAccent">@null</item>
    </style>

    <style name="Theme.Flashcards.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name = "MyActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/color_action_bar</item>
    </style>
</resources>